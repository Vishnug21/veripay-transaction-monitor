<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <TextView
            android:id="@+id/tvSettingsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnBackground"
            android:layout_marginBottom="12dp" />

        <!-- Profile Email Display -->
        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email: "
            android:textSize="16sp"
            android:textColor="?attr/colorOnBackground"
            android:layout_marginBottom="24dp" />

        <!-- Enable SMS Permission -->
        <Button
            android:id="@+id/btnEnableSmsPerm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable SMS Permission"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_marginBottom="12dp" />

        <!-- Open Notification Access Settings -->
        <Button
            android:id="@+id/btnOpenNotifAccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open Notification Access"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_marginBottom="12dp" />

        <!-- Logout Button -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:backgroundTint="?attr/colorError"
            android:textColor="@android:color/white"
            android:layout_marginBottom="24dp" />

        <!-- ============================= -->
        <!-- ðŸ§ª DEBUG: Seed Test Data Button -->
        <!-- ============================= -->
        <Button
            android:id="@+id/btnSeedTestData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seed 15 Test Transactions"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp" />

    </LinearLayout>

</ScrollView>
