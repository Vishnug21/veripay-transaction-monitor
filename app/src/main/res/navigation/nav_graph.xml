<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <!-- ðŸ” Login Fragment (new start destination) -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.veripaytransactionmonitor.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">

        <!-- After successful login, navigate to Home -->
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <!-- ðŸ  Home Fragment -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.veripaytransactionmonitor.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment" />

        <action
            android:id="@+id/action_homeFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>

    <!-- ðŸ“Š Dashboard Fragment -->
    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.veripaytransactionmonitor.DashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <!-- ðŸ’³ Payment Fragment -->
    <fragment
        android:id="@+id/paymentFragment"
        android:name="com.example.veripaytransactionmonitor.PaymentFragment"
        android:label="Payment"
        tools:layout="@layout/fragment_payment" />

    <!-- âš™ï¸ Settings Fragment -->
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.veripaytransactionmonitor.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
</navigation>
